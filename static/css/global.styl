sans_font = Roboto
serif_font = 'Linux Libertine'
gray = #4A4A4A
orange = #F7921D

/*
---------------------
    Common styles
---------------------
*/

body
    font: 20px serif_font
    color: gray
    line-height: 29px
    font-weight: 300

h1, h2, h3, h4, h5
    font-family: sans_font
    color: black
    font-weight: 300
    font-size: 36px
    line-height: 120%

h2
    font-size: 30px

h3
    font-size: 24px

h4
    font-size: 18px

h5
    font-size: 14px

a
    color: gray
    text-decoration: underline

    &:hover
        color: gray
        text-decoration: none

/*
------------------
    Navigation
------------------
*/

nav
    margin: 30px 0 30px 0

    .logo
        float: left

    ul
        float: right
        list-style-type: none

        li
            float: left
            margin-left: 60px
            line-height: 68px

            a
                color: orange
                font-family: sans_font
                text-decoration: none
                text-transform: uppercase
                font-size: 18px

                &:hover
                    color: orange
